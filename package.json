{
  "name": "cobalt-uoft",
  "version": "0.3.0",
  "description": "A collection of open data APIs that allow anyone to interface with public information from the University of Toronto.",
  "main": "lib/index.js",
  "engines": {
    "node": "^5.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cobalt-uoft/cobalt.git"
  },
  "author": "Cobalt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cobalt-uoft/cobalt/issues"
  },
  "homepage": "https://cobalt.qas.im",
  "scripts": {
    "build": "rm -rf lib && ./node_modules/.bin/babel src/ -d lib/",
    "dev": "npm run build && ./bin/dev",
    "start": "./bin/cobalt",
    "lint": "eslint .",
    "test": "ava",
    "prepush": "npm run lint && npm test",
    "prepublish": "npm run build",
    "coverage": "nyc npm test",
    "coveralls": "npm run coverage && nyc report --reporter=text-lcov | coveralls"
  },
  "ava": {
    "files": [
      "test/courses",
      "test/buildings"
    ],
    "failFast": true,
    "require": [
      "babel-register"
    ]
  },
  "bin": {
    "cobalt": "./bin/cobalt"
  },
  "dependencies": {
    "babel-runtime": "^6.5.0",
    "co": "^4.6.0",
    "express": "^4.13.4",
    "minimist": "^1.2.0",
    "mongoose": "^4.4.3",
    "node-schedule": "^1.0.0",
    "winston": "^2.1.1"
  },
  "devDependencies": {
    "ava": "^0.12.0",
    "babel-core": "^6.5.2",
    "babel-cli": "^6.5.1",
    "babel-eslint": "^5.0.0-beta10",
    "babel-plugin-transform-runtime": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "coveralls": "^2.11.6",
    "eslint": "^2.1.0",
    "gaze": "^0.5.2",
    "husky": "^0.11.1",
    "nodemon": "^1.8.1",
    "nyc": "^5.6.0",
    "supertest": "^1.2.0"
  }
}
